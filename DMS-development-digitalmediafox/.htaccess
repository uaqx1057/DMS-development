<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On


    
    # Allow livewire preview
    RewriteCond %{REQUEST_URI} ^/livewire/preview-file/ [NC]
    RewriteRule ^ - [L]

    # Redirect /vendor/* to /public/vendor/*
    RewriteCond %{REQUEST_URI} ^/vendor/(.*)$
    RewriteRule ^vendor/(.*)$ public/vendor/$1 [L]

    # Redirect /build/* to /public/build/*
    RewriteCond %{REQUEST_URI} ^/build/(.*)$
    RewriteRule ^build/(.*)$ public/build/$1 [L]

    # Serve fuel_screenshots from public folder
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^fuel_screenshots/(.*)$ public/fuel_screenshots/$1 [L]

    # Serve receipt_image from public folder
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^receipt_image/(.*)$ public/receipt_image/$1 [L]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Remove trailing slashes if not a folder
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Front Controller
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [L]
</IfModule>
